<body id="login">
  <header class="loginHeader">
    <h1 class="title">CardBoard</h1>
  </header>
  <div class="loginContainer">
    <h3 id="loginTitle">Login</h3>
    <form id="loginForm" action="/auth/login" method="POST">
      <!-- <label for="auth-email">Email</label> -->
      <input id="auth-email" type="email" name="email" placeholder="Email">

      <!-- <label for="auth-password">Password</label> -->
      <input id="auth-password" type="password" name="password" placeholder="Password">

      <p><input class="submit" type="submit" value="Let's get to work!"></p>
    </form>
    <p id="loginRedirect">Oops! Don't have an account already, click <a id="goToSignup" href="signup">here</a> to create one!</p>
  </div>
</body>